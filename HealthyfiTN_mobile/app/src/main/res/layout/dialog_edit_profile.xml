<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_lg">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifier le profil"
            android:textSize="22sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="@dimen/spacing_lg" />

        <!-- Profile Image Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_lg">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                app:strokeWidth="3dp"
                app:strokeColor="@color/primary">

                <ImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person"
                    android:scaleType="centerCrop"
                    android:contentDescription="Photo de profil" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChangePhoto"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Changer la photo"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_marginTop="@dimen/spacing_sm"
                app:cornerRadius="18dp"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp"
                app:elevation="0dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />
        </LinearLayout>

        <!-- First Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEditFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prénom"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/transparent"
            style="@style/Widget.Material3.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Last Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEditLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:hint="Nom"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/transparent"
            style="@style/Widget.Material3.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Specialization -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEditSpecialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:hint="Spécialisation"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/transparent"
            style="@style/Widget.Material3.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditSpecialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEditPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:hint="Téléphone"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/transparent"
            style="@style/Widget.Material3.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Clinic Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEditClinicName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:hint="Nom de la clinique"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/transparent"
            style="@style/Widget.Material3.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditClinicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Consultation Fee -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEditConsultationFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:hint="Frais de consultation (TND)"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/transparent"
            style="@style/Widget.Material3.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditConsultationFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Bio -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEditBio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:hint="Bio"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="@color/transparent"
            style="@style/Widget.Material3.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEditBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:minLines="3"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_lg"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Annuler"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                app:cornerRadius="8dp"
                app:backgroundTint="@android:color/transparent"
                app:elevation="0dp"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Enregistrer"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/spacing_sm"
                app:cornerRadius="8dp"
                app:backgroundTint="@color/primary"
                app:elevation="2dp"
                style="@style/Widget.Material3.Button" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>