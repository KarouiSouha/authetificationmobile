<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Remote Video (Full Screen) -->
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/remoteSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Local Video (Picture-in-Picture) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLocalVideo"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <org.webrtc.SurfaceViewRenderer
            android:id="@+id/localSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <!-- Call Status Overlay (Top) -->
    <LinearLayout
        android:id="@+id/llCallStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingBottom="16dp"
        android:background="@drawable/bg_gradient_overlay">

        <TextView
            android:id="@+id/tvCallStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ðŸ“ž Appel en cours..."
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1" />

        <TextView
            android:id="@+id/tvCallDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="00:00"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowRadius="2" />
    </LinearLayout>

    <!-- Controls (Bottom) -->
    <LinearLayout
        android:id="@+id/llControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="32dp"
        android:background="@drawable/bg_gradient_overlay_bottom">

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="16dp">

            <!-- Mute -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white_20">

                <ImageButton
                    android:id="@+id/btnToggleMute"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_mic_on"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Muet"
                    app:tint="@color/white" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Toggle Video -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white_20">

                <ImageButton
                    android:id="@+id/btnToggleVideo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_videocam_on"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="VidÃ©o"
                    app:tint="@color/white" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Switch Camera -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white_20">

                <ImageButton
                    android:id="@+id/btnSwitchCamera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_switch_camera"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Changer camÃ©ra"
                    app:tint="@color/white" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- End Call Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEndCall"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="32dp"
            android:text="ðŸ“ž Terminer"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:backgroundTint="@android:color/holo_red_dark"
            app:cornerRadius="32dp"
            app:icon="@drawable/ic_call_end"
            app:iconTint="@color/white"
            app:iconGravity="start"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</RelativeLayout>