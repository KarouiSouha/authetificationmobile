<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Patient Info + Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Patient Avatar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/primary">

                <ImageView
                    android:id="@+id/ivPatientAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person"
                    android:scaleType="centerCrop"
                    android:contentDescription="Photo du patient" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Patient Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvPatientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alice Martin"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvPatientAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="patient@email.com"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Status Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â° ProgrammÃ©"
                android:textSize="11sp"
                app:chipBackgroundColor="@android:color/holo_orange_light"
                app:chipStrokeWidth="0dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"
            android:layout_marginBottom="12dp" />

        <!-- Appointment Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Date & Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- Date -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“…"
                        android:textSize="16sp"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/tvAppointmentDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 Nov 2025"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- Time -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â°"
                        android:textSize="16sp"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/tvAppointmentTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14:30"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Reason -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“"
                    android:textSize="16sp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tvAppointmentReason"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Consultation de suivi pour contrÃ´le cardiaque"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons (Visible only for SCHEDULED) -->
        <LinearLayout
            android:id="@+id/llActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:visibility="visible">

            <!-- View Details Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="ðŸ‘ï¸ DÃ©tails"
                android:textSize="13sp"
                android:textColor="@color/primary"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_marginEnd="6dp"
                app:cornerRadius="10dp"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp"
                app:elevation="0dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- Complete Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnComplete"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="âœ… Terminer"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                app:cornerRadius="10dp"
                app:backgroundTint="@android:color/holo_green_light"
                app:elevation="2dp"
                style="@style/Widget.Material3.Button" />

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelAppt"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="âŒ Annuler"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_marginStart="6dp"
                app:cornerRadius="10dp"
                app:backgroundTint="@android:color/holo_red_dark"
                app:elevation="2dp"
                style="@style/Widget.Material3.Button" />
        </LinearLayout>

        <!-- Only View Details for Completed/Cancelled -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartConsultation"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="ðŸ‘ï¸ Voir les dÃ©tails"
            android:textSize="14sp"
            android:textColor="@color/primary"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:cornerRadius="10dp"
            app:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            app:elevation="0dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

    </LinearLayout>
</androidx.cardview.widget.CardView>