<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_lg">

        <!-- Logo Section -->
        <ImageView
            android:id="@+id/ivLogoLogin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_logo"
            android:contentDescription="@string/app_name"
            android:layout_marginTop="@dimen/spacing_xxl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvLoginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_title"
            android:textSize="@dimen/text_size_xxl"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="@dimen/spacing_lg"
            app:layout_constraintTop_toBottomOf="@id/ivLogoLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvLoginSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_subtitle"
            android:textSize="@dimen/text_size_md"
            android:textColor="@color/text_secondary"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="@dimen/spacing_sm"
            app:layout_constraintTop_toBottomOf="@id/tvLoginTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Login Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xl"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvLoginSubtitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_lg">

                <!-- User Type Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Se connecter en tant que"
                    android:textSize="@dimen/text_size_md"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <RadioGroup
                    android:id="@+id/rgUserTypeLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/spacing_lg">

                    <RadioButton
                        android:id="@+id/rbPatientLogin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Patient"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif"
                        android:checked="true"
                        android:buttonTint="@color/primary" />

                    <RadioButton
                        android:id="@+id/rbDoctorLogin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MÃ©decin"
                        android:textSize="@dimen/text_size_sm"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif"
                        android:buttonTint="@color/primary" />
                </RadioGroup>

                <!-- Email Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_hint"
                    app:startIconDrawable="@drawable/ic_email"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/bg_edittext"
                        android:paddingStart="@dimen/spacing_md"
                        android:paddingEnd="@dimen/spacing_md"
                        android:textSize="@dimen/text_size_md"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:hint="@string/password_hint"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:endIconMode="password_toggle"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height"
                        android:inputType="textPassword"
                        android:background="@drawable/bg_edittext"
                        android:paddingStart="@dimen/spacing_md"
                        android:paddingEnd="@dimen/spacing_md"
                        android:textSize="@dimen/text_size_md"
                        android:textColor="@color/text_primary"
                        android:fontFamily="sans-serif" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Forgot Password -->
                <TextView
                    android:id="@+id/tvForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgot_password"
                    android:textSize="@dimen/text_size_sm"
                    android:textColor="@color/primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/spacing_sm" />

                <!-- Login Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/login_button"
                    android:textSize="@dimen/text_size_md"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/bg_button_primary"
                    android:layout_marginTop="@dimen/spacing_lg"
                    app:cornerRadius="@dimen/button_corner_radius"
                    app:elevation="2dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Register Link -->
        <LinearLayout
            android:id="@+id/llRegisterLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_lg"
            app:layout_constraintTop_toBottomOf="@id/cardLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_account"
                android:textSize="@dimen/text_size_sm"
                android:textColor="@color/text_secondary"
                android:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/tvRegisterLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_link"
                android:textSize="@dimen/text_size_sm"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="@dimen/spacing_xs"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/spacing_sm" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>