<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âœ… Terminer la Consultation"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_check"
                android:tint="@android:color/holo_green_light"
                android:contentDescription="Complete icon" />
        </LinearLayout>

        <!-- Patient Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¤ Patient"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvPatientNameComplete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Required Fields Notice -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_chip"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â„¹ï¸"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Le diagnostic et la prescription sont obligatoires"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- Diagnosis -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ðŸ©º Diagnostic *"
            android:layout_marginBottom="12dp"
            app:counterEnabled="true"
            app:counterMaxLength="500"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDiagnosis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="3"
                android:maxLines="6"
                android:gravity="top"
                android:scrollbars="vertical"
                android:maxLength="500" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Prescription -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ðŸ’Š Prescription *"
            android:layout_marginBottom="12dp"
            app:counterEnabled="true"
            app:counterMaxLength="500"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPrescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="3"
                android:maxLines="6"
                android:gravity="top"
                android:scrollbars="vertical"
                android:maxLength="500" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Notes (Optional) -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ðŸ“ Notes supplÃ©mentaires (optionnel)"
            android:layout_marginBottom="20dp"
            app:counterEnabled="true"
            app:counterMaxLength="300"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConsultationNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences"
                android:minLines="2"
                android:maxLines="4"
                android:gravity="top"
                android:scrollbars="vertical"
                android:maxLength="300" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelComplete"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Annuler"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                app:backgroundTint="@android:color/transparent"
                app:elevation="0dp"
                app:cornerRadius="10dp"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmComplete"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="âœ… Terminer"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"
                app:backgroundTint="@android:color/holo_green_light"
                app:cornerRadius="10dp"
                app:elevation="2dp"
                app:icon="@drawable/ic_check"
                app:iconTint="@color/white"
                style="@style/Widget.Material3.Button" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>