<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ DÃ©tails du Rendez-vous"
            android:textSize="20sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Doctor Name (For Patient View) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MÃ©decin"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDoctorNameDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. John Doe"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Patient Name (For Doctor View) -->
        <TextView
            android:id="@+id/tvPatientNameDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Patient Email (For Doctor View) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"
            android:id="@+id/lblPatientEmail"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvPatientEmailDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="patient@example.com"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Patient Phone (For Doctor View) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃ©lÃ©phone"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"
            android:id="@+id/lblPatientPhone"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvPatientPhoneDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+33 6 12 34 56 78"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAppointmentDateDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/11/2025"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Alias for Doctor View -->
        <TextView
            android:id="@+id/tvAppointmentDateDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/11/2025"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heure"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAppointmentTimeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Alias for Doctor View -->
        <TextView
            android:id="@+id/tvAppointmentTimeDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAppointmentTypeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIDEO_CALL"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Alias for Doctor View -->
        <TextView
            android:id="@+id/tvAppointmentTypeDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIDEO_CALL"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Reason -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motif"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAppointmentReasonDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultation de routine"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Alias for Doctor View -->
        <TextView
            android:id="@+id/tvReasonDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultation de routine"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Status -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statut"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAppointmentStatusDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCHEDULED"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Alias for Doctor View -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipStatusDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCHEDULED"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Notes Card (Optional - For Doctor View) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardNotesDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNotesDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes du rendez-vous"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Close Button (For Doctor View) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCloseDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fermer"
            android:layout_marginTop="16dp"
            app:cornerRadius="8dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>