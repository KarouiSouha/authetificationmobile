<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_md"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Patient Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Avatar -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/primary">

                    <ImageView
                        android:id="@+id/ivPatientAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_person"
                        android:scaleType="centerCrop"
                        android:contentDescription="Photo du patient" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Name and Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/spacing_md">

                    <TextView
                        android:id="@+id/tvPatientName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alice Martin"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvPatientAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32 ans • Femme"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="2dp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </LinearLayout>

            <!-- Status Badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipStatus"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="En ligne"
                android:textSize="11sp"
                app:chipBackgroundColor="#E8F5E9"
                app:chipStrokeWidth="0dp"
                android:textColor="#2E7D32"
                app:chipMinHeight="24dp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background"
            android:layout_marginTop="@dimen/spacing_md"
            android:layout_marginBottom="@dimen/spacing_md" />

        <!-- Appointment Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_clock"
                    android:tint="@color/primary" />

                <TextView
                    android:id="@+id/tvAppointmentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:30"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginStart="8dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_calendar"
                    android:tint="@color/primary" />

                <TextView
                    android:id="@+id/tvAppointmentDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05 Nov 2025"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginStart="8dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Reason -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/spacing_sm">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_note"
                android:tint="@color/primary" />

            <TextView
                android:id="@+id/tvAppointmentReason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Consultation de suivi"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:layout_marginStart="8dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_md"
            android:gravity="end">

            <!-- View Details Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Détails"
                android:textSize="13sp"
                android:textColor="@color/primary"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:cornerRadius="8dp"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp"
                app:elevation="0dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- Start Consultation Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartConsultation"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Démarrer"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_marginStart="@dimen/spacing_sm"
                app:icon="@drawable/ic_video_call"
                app:iconTint="@color/white"
                app:cornerRadius="8dp"
                app:backgroundTint="@color/primary"
                app:elevation="0dp"
                style="@style/Widget.Material3.Button" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>